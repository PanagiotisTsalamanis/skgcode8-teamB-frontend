<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.HomePa"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Welcome"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:fontFamily="@font/poppins_semibold"
        android:text="First name"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnPrescriptions"/>


    <Button
        android:id="@+id/btnPrescriptions"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/document"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="left|center_vertical"
        android:shadowColor="#0E4577"
        android:text="Prescriptions"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/btnDiagnosesHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDiagnosesHistory"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/diagnosis"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#0E4577"
        android:text="Diagnoses History"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/btnAppointments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAppointments"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/appointment"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#0E4577"
        android:text="Appointments"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/btnScheduleAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnScheduleAppointment"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/calendar"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#0E4577"
        android:text="Schedule Appointment"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/btnUserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUserProfile"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="55dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/user"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#0E4577"
        android:text="User Profile"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>