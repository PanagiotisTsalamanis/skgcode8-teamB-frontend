    <Button
        android:id="@+id/btnPrescriptions"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/docum"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:gravity="left|center_vertical"
        android:shadowColor="#0E4577"
        android:text="Prescriptions"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/btnDiagnosesHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDiagnosesHistory"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/scope"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#0E4577"
        android:text="Diagnoses History"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/btnAppointments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAppointments"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/healt"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#0E4577"
        android:text="Appointments"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/btnScheduleAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnScheduleAppointment"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="26dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/calenda"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#0E4577"
        android:text="Schedule Appointment"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toTopOf="@+id/btnUserProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUserProfile"
        android:layout_width="320dp"
        android:layout_height="75dp"
        android:layout_marginBottom="55dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/btn_passwords"
        style="@style/Widget.App.Button"
        android:drawableRight="@drawable/vecto"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:shadowColor="#0E4577"
        android:text="User Profile"
        android:textColor="#0E4577"
        android:textSize="18sp"
        android:letterSpacing="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>